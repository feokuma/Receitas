<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="Receitas.ContentViews.ListaReceitasView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <CollectionView ItemsSource="{Binding ListaReceitas}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5" CornerRadius="3" Margin="10, 0">
                        <Grid ColumnDefinitions="1*, 4*">
                            <Image Grid.Column="0"
                                   Margin="0"
                                   HeightRequest="70"
                                   Source="{Binding Imagem}" />

                            <StackLayout Grid.Column="1">
                                <Label Text="{Binding Nome}" FontSize="Title" />
                                <Label Text="{Binding Descrição}" />
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentView.Content>
</ContentView>